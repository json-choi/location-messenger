{
  "name": "location-messenger",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter './packages/*' dev",
    "dev:ws": "bun run --filter ws-server dev",
    "dev:api": "bun run --filter api dev",
    "dev:mobile": "bun run --filter mobile dev",
    "db:generate": "bun run --filter db generate",
    "db:push": "bun run --filter db db:push",
    "db:studio": "bun run --filter db studio"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
